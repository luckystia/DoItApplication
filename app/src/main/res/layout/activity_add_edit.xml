<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddEditActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/headtop"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white">
        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginBottom="60dp">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back">
            </ImageView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/border_editext"
        android:orientation="vertical">
        <EditText
            android:id="@+id/txt_id"
            android:layout_width="1dp"
            android:layout_height="wrap_content">
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Judul"
            android:textColor="#7E7E7E"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_form"
            android:fontFamily="@font/poppins_semi_bold"
            android:hint="Masukkan judul"
            android:padding="20dp"
            android:singleLine="true"
            android:textColor="#0A62FF"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Tanggal"
            android:textColor="#7E7E7E"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_form"
            android:fontFamily="@font/poppins_semi_bold"
            android:hint="01/02/2021"
            android:lines="1"
            android:maxLines="1"
            android:padding="20dp"
            android:singleLine="true"
            android:textColor="#0A62FF"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Isi"
            android:textColor="#7E7E7E"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txt_isi"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_form"
            android:fontFamily="@font/poppins_semi_bold"
            android:hint="Masukkan deskripsi tugas"
            android:lines="1"
            android:maxLines="1"
            android:padding="20dp"
            android:singleLine="true"
            android:textColor="#0A62FF"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#0A62FF"
            android:fontFamily="@font/poppins_regular"
            android:padding="20dp"
            android:textColor="@color/white"
            android:text="Add Task"
            android:textSize="12sp" />

    </LinearLayout>
</RelativeLayout>