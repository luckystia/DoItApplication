<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="25dp"
    android:orientation="vertical"
    tools:context=".activity.ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@drawable/headtop"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Profil User"
                    android:paddingStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:fontFamily="sans-serif"
            android:text="Nama  "
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_marginVertical="5dp"
            android:fontFamily="sans-serif"
            android:text=": "
            android:layout_marginEnd="16dp"
            android:layout_marginStart="140dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/datanama"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:fontFamily="sans-serif"
            android:text="Text nama"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="160dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:fontFamily="sans-serif"
            android:paddingTop="25dp"
            android:text="Jenis Kelamin  "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif"
            android:text=": "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="140dp"/>

        <TextView
            android:id="@+id/textjeniskelamin"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif"
            android:text="Text jenis kelamin "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="160dp"/>

        <TextView
            android:id="@+id/textAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:text="Umur  "
            android:textSize="16sp"
            android:paddingTop="55dp"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_marginTop="55dp"
            android:fontFamily="sans-serif"
            android:text=": "
            android:textColor="@color/black"
            android:layout_marginStart="140dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textumur"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="55dp"
            android:fontFamily="sans-serif"
            android:text="Text umur "
            android:textColor="@color/black"
            android:layout_marginStart="160dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textHobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:fontFamily="sans-serif"
            android:paddingTop="85dp"
            android:text="Hobi  "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_marginTop="85dp"
            android:fontFamily="sans-serif"
            android:text=": "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="140dp"/>
        <TextView
            android:id="@+id/texthobi"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="85dp"
            android:fontFamily="sans-serif"
            android:text="Text hobi "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="160dp"/>
        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="150dp"
            android:layout_gravity="center"
            android:backgroundTint="#0A62FF"
            android:text="Edit"
            android:layout_marginStart="30dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:backgroundTint="#0A62FF"
            android:text="Logout"
            android:layout_marginStart="240dp"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>
